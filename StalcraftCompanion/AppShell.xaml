<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StalcraftCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StalcraftCompanion"
    Shell.FlyoutBehavior="Disabled"
    xmlns:view="clr-namespace:StalcraftCompanion.View">

    <TabBar>
        <Tab Title="Home"
             Icon="house_solid.svg">
            <ShellContent ContentTemplate="{DataTemplate view:HomePage}" Route="HomePage"/>
        </Tab>
        <Tab Title="Database"
             Icon="database_solid.svg">
            <ShellContent ContentTemplate="{DataTemplate view:DatabasePage}" Route="DatabasePage"/>
        </Tab>
        <Tab Title="Profile"
             Icon="user_solid.svg">
            <ShellContent ContentTemplate="{DataTemplate view:ProfilePage}" Route="ProfilePage"/>
        </Tab>
    </TabBar>

</Shell>
